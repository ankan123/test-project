<p id="notice"><%= notice %></p>

<% if current_user && current_user.admin %>
  <%= link_to 'Add New Event', new_event_path, :class => 'btn btn-success add-new-event' %>
<%end%>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/assets/image1" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/assets/image2" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/assets/image3" class="d-block w-100" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<h1 class="text-center">Events</h1>


    <% @events.each do |event| %>
        <div class="card event-card">
          <div class="card-body">

            <h5 class="performer">Performer : <%= event.performer %></h5>
            <p> <%= event.description[0..40] %>...</p>
            <p class="text-muted">( <%= pluralize(event.comments.count, 'comment') %> )</p>
            <div class="edits">
              <%= link_to 'Show', event, :class => 'btn btn-success btn-sm' %>
              <% if current_user && current_user.admin %>
                <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-primary btn-sm' %>
                <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %>
              <% end %>
            </div>
            
          </div>
        </div>
    <% end %>

<br>

